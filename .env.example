# ==============================================
# DriveHR Configuration  
# ==============================================
# Company UUID - Get this from your DriveHR admin panel
DRIVEHR_COMPANY_ID=your-company-id

# ==============================================
# WordPress Configuration
# ==============================================
# WordPress webhook endpoint URL
WP_API_URL=https://yourwebsite.com/webhook/drivehr-sync

# ==============================================
# Webhook Security
# ==============================================
# Secret key for webhook HMAC signature validation (min 32 characters)
WEBHOOK_SECRET=your-super-secret-webhook-key-at-least-32-characters-long

# ==============================================
# GitHub Actions Configuration
# ==============================================
# GitHub personal access token with repo and actions permissions (required for manual triggers)
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub repository in format owner/repo (automatically set by GitHub Actions)
GITHUB_REPOSITORY=your-username/your-repo-name

# ==============================================
# Application Configuration
# ==============================================
# Environment: development, staging, production
ENVIRONMENT=production

# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# ==============================================
# GitHub Actions Specific Variables
# ==============================================
# These are automatically set by GitHub Actions, but can be overridden for testing

# GitHub Actions run ID (automatically set)
GITHUB_RUN_ID=

# Force sync even when no changes detected (optional)
FORCE_SYNC=false

# ==============================================
# Legacy Configuration (Optional)
# ==============================================
# These settings are maintained for backward compatibility but may not be used in the new architecture

# Request timeout for external API requests in milliseconds
REQUEST_TIMEOUT_MS=30000

# Maximum number of retries for failed requests
MAX_RETRIES=3

# WordPress post status for new jobs
WP_POST_STATUS=publish

# WordPress post type for jobs
WP_POST_TYPE=job_listing

# ==============================================
# Development and Testing
# ==============================================
# Node environment
NODE_ENV=development

# Port for local testing (if applicable)
PORT=3000

# Debug mode for detailed logging
DEBUG_MODE=false