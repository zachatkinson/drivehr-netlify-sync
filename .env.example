# DriveHR Configuration  
# Company UUID - Get this from your DriveHR admin panel
DRIVEHR_COMPANY_ID=e25d37dd-a8bb-4c52-9112-c5d172390256

# WordPress Configuration
# WordPress webhook endpoint for job synchronization
WP_API_URL=https://yourwordpresssite.com/webhook/drivehris-sync

# Security Configuration
# Secret key for webhook HMAC signature validation (use the provided secure key)
WEBHOOK_SECRET=3kN8pL9mX7qR4vF2wE5yU6tI1oP0sA9dG8hJ3bN7cM2xV5zQ4wE8rT1yU6iO3pL9m

# Optional: Rate Limiting
# Maximum requests per minute (default: 60)
RATE_LIMIT_MAX_REQUESTS=60

# Optional: Request Timeout
# Timeout for external API requests in milliseconds (default: 30000)
REQUEST_TIMEOUT_MS=30000

# Optional: Retry Configuration
# Maximum number of retries for failed requests (default: 3)
MAX_RETRIES=3

# Optional: Cache Configuration
# Cache TTL in seconds for job data (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600

# Environment Configuration
# Set to 'production', 'staging', or 'development'
ENVIRONMENT=production

# Logging Configuration
# Log level: 'error', 'warn', 'info', 'debug' (default: 'info')
LOG_LEVEL=info

# Optional: Monitoring and Analytics
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Optional: Feature Flags
# Enable/disable specific features
ENABLE_JOB_VALIDATION=true
ENABLE_DUPLICATE_CHECK=true
ENABLE_METRICS_COLLECTION=true

# Optional: WordPress Custom Fields
# Map DriveHRIS fields to WordPress custom fields
WP_CUSTOM_FIELD_MAPPING={"salary_range":"job_salary","department":"job_department"}

# Optional: Filtering Configuration
# Only sync jobs from specific departments (comma-separated)
FILTER_DEPARTMENTS=

# Only sync jobs with specific job types (comma-separated)
FILTER_JOB_TYPES=

# Minimum salary to sync (optional)
FILTER_MIN_SALARY=

# Optional: Notification Configuration
# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Email notifications (optional)
NOTIFICATION_EMAIL=

# Optional: Performance Configuration
# Batch size for processing multiple jobs (default: 10)
BATCH_SIZE=10

# Delay between batch processing in milliseconds (default: 1000)
BATCH_DELAY_MS=1000

# Optional: WordPress Configuration
# WordPress post status for new jobs (default: 'publish')
WP_POST_STATUS=publish

# WordPress post type for jobs (default: 'job_listing')
WP_POST_TYPE=job_listing

# Optional: Debug Configuration
# Enable debug mode for detailed logging (default: false)
DEBUG_MODE=false

# Save raw API responses for debugging (default: false)
SAVE_RAW_RESPONSES=false

# Optional: Health Check Configuration
# Health check endpoint secret (for monitoring)
HEALTH_CHECK_SECRET=your-health-check-secret