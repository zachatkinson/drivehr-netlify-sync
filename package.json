{
  "name": "drivehr-netlify-sync",
  "version": "0.0.0-development",
  "description": "TypeScript-based Netlify serverless function that scrapes DriveHR job postings and syncs them to WordPress via webhooks",
  "main": "dist/functions/sync-jobs.mjs",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && find dist/functions -name '*.d.*' -delete",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "NODE_OPTIONS=\"--import tsx/esm\" eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "NODE_OPTIONS=\"--import tsx/esm\" eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "type-check": "pnpm typecheck",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "security": "pnpm audit --audit-level moderate",
    "security:high": "pnpm audit --audit-level high",
    "security:fix": "pnpm audit --fix",
    "security:prod": "pnpm audit --audit-level high --prod",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "clean": "rm -rf dist coverage docs",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "scrape-and-sync": "node dist/scripts/scrape-and-sync.js",
    "inspect-jobs": "tsx scripts/job-data-tools.mts",
    "inspect-test-data": "tsx scripts/inspect-test-data.mts",
    "browse-jobs": "tsx scripts/browse-job-data.mts",
    "scrape-live": "tsx scripts/live-scraper.mts",
    "compare-jobs": "tsx scripts/compare-job-data.mts",
    "validate-jobs": "tsx scripts/validate-job-data.mts",
    "test-wordpress-payload": "tsx scripts/test-wordpress-payload.mts",
    "coverage-report": "tsx scripts/coverage-report.mts",
    "codecov": "tsx scripts/codecov-cli.mts",
    "netlify:watch": "netlify watch",
    "netlify:logs": "netlify logs:function sync-jobs",
    "netlify:status": "netlify status",
    "netlify:open": "netlify open:site",
    "verify-config": "node scripts/verify-config.js",
    "monitor-deployment": "node scripts/monitor-deployment.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@playwright/test": "^1.56.1",
    "cheerio": "^1.1.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@netlify/functions": "^4.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "netlify-cli": "^23.2.1",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "pnpm": {
    "overrides": {
      "tmp": ">=0.2.4",
      "vite@>=7.1.0 <=7.1.4": ">=7.1.5",
      "playwright@<1.55.1": ">=1.55.1",
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11"
    }
  }
}
